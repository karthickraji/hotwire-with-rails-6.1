<p id="notice"><%= notice %></p>
<div class="col-12">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <h1 class="mr-sm-2">Books</h1>
      <%= link_to 'Create New Book', new_book_path, class: "btn btn-sm btn-primary mb-2" %>
    </div>
  </div>
  <!-- %#= turbo_frame_tag "new_book", src: new_book_path, target: :_top % -->

  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <div class="mb-2">
        <form class="form-inline">
          <%= search_field_tag :book, {}, class: "form-control mr-sm-2" %>
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>

      <%= turbo_stream_from "books" %>
      <%= turbo_frame_tag "books" do %>
        <%= render @books %>
      <% end %>
    </div>
  </div>
</div>
