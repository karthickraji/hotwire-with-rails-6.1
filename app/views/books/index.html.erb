<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-12">
    <div class="mb-3">
      <%= turbo_frame_tag "new_book", src: new_book_path, target: :_top %>
      <!-- %#= link_to 'Create New Book', new_book_path, class: "btn btn-sm btn-primary mb-2" % -->
    </div>

    <div class="search-block" data-controller="search">
      <form class="form-inline">
        Search Book <input id="query" class="form-control ml-2" type="text" name="query" data-search-target="query" data-action="keyup->search#submit">
      </form>

      <div class="row">
        <div class="col-12">
          <div id="search-books" class="mt-3" data-search-target="books">
            <%= turbo_stream_from "books" %>
            <%= turbo_frame_tag "books" do %>
              <%= render @books %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
