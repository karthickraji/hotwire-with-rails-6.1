<%= form_with(model: book, class: "form-inline", id: "books-form") do |form| %>
  <div class="row">
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% book.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="col-12 mb-2">
    <div class="row">
      <div class="col-3">
        <div class="form-group">
          <%= form.text_field :title, class: "form-control required", placeholder: "Title" %>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group">
          <%= form.text_field :isbn, class: "form-control required", placeholder: "ISBN" %>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group">
          <%= form.text_field :total_pages, class: "form-control required", placeholder: "Total Pages" %>
        </div>
      </div>

      <div class="col-3">
        <div class="form-group">
          <%= form.date_field :published_date, class: "form-control required", placeholder: "Published Date" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12 mb-2">
    <div class="row">
      <%= form.fields_for :author_attributes do |a|%>

        <div class="col-3">
          <div class="form-group">
            <%= a.text_field :name, class: "form-control required", placeholder: "Author Name" %>
          </div>
        </div>

        <div class="col-3">
          <div class="form-group">
            <%= a.text_field :contact_number, class: "form-control required", placeholder: "Author Contact Number" %>
          </div>
        </div>
      <% end %>

      <div class="col-3" data-controller="books">
        <div class="form-group">
          <%= form.submit class: "btn btn-primary", data: {action: "click->books#validate_form"} %>
        </div>
      </div>
    </div>
  </div>

<% end %>
